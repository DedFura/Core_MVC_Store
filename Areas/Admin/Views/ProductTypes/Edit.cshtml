@model Core_MVC_Store.Models.ProductTypes
@{
    ViewData["Title"] = "Edit";
}



<div class="row mt-1">
    <div class="col">
        <h2 class="text-info text-center"> Edit product type</h2>
    </div>
</div>
<div class=" row mt-1">
    <div class="col">
        <form method="post" asp-action="Edit">
            <div class="p-4 border rounded">

                @*Передаём ID через скрытое поле*@
                <input type="hidden" asp-for="Id" />

                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="row mt-1 form-group">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-5">
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">

                    <input class="btn btn-primary" type="submit" asp-route-id="@Model.Id" value="Update" />

                    <a class="btn btn-success" asp-action="Index">Back to list</a>
                </div>

            </div>
        </form>
    </div>
</div>



@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}