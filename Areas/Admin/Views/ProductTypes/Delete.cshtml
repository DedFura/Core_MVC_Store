@model Core_MVC_Store.Models.ProductTypes
@{
    ViewData["Title"] = "Delete";
}



<div class="row mt-1">
    <div class="col">
        <h2 class="text-info text-center">Delete Product Type</h2>
    </div>
</div>
<div class=" row mt-1">
    <div class="col">
        <form method="post" asp-action="Delete">
            <div class="p-4 border rounded">

                <div class="row mt-1 form-group">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-5">
                        <input class="form-control" disabled="disabled" asp-for="Name" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete" />
                    <a class="btn btn-success" asp-action="Index">Back to list</a>
                </div>

            </div>
        </form>
    </div>
</div>