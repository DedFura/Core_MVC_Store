@using System.Web
@model int

<td style="width: 150px">
    <div class="btn-group" role="group">
        <a type="button" class="btn btn-primary" href="@HttpUtility.UrlDecode(Url.Action("Edit/" + Model))"><i class="fas fa-edit"></i></a>
        <a type="button" class="btn btn-success" href="@HttpUtility.UrlDecode(Url.Action("Details/" + Model))"><i class="far fa-list-alt"></i></a>
        <a type="button" class="btn btn-danger" href="@HttpUtility.UrlDecode(Url.Action("Delete/" + Model))"><i class="fas fa-trash"></i></a>
    </div>
</td>